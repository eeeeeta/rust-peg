use std::collections::HashMap;
use std::borrow::{ToOwned, Cow};

#[export]
consonants
	= ([a-z]![aeiou])+

#[export]
options -> Option<()>
	= "abc" v:"def"? {v}

number -> i64
	= n:$([0-9]+) { n.parse().unwrap() }

#[export]
list -> Vec<i64>
	= number ** ","

digit -> i64
	= n:$([0-9]) {n.parse().unwrap() }

#[export]
repeat_n -> Vec<i64>
	= digit{4}

#[export]
repeat_min -> Vec<i64>
	= digit{2,}

#[export]
repeat_max -> Vec<i64>
	= digit{,2}

#[export]
repeat_min_max -> Vec<i64>
	= digit{2,3}

#[export]
boundaries -> String
	= n:$("foo") { n.to_string() }

#[export]
case_insensitive -> String
	= n:$("foo"i) { n.to_string() }

#[export]
borrowed -> &'input str
	= $([a-z]+)

#[export]
lifetime_parameter -> Cow<'input, str>
	= x:$([a-z]+) { x.into() }
	/ "COW"  { "cow".to_owned().into() }

#[export]
block -> &'input str
	= x:$([a-z]+) {
		let result = x;
		result
	}

#[export]
keyvals -> HashMap<i64, i64>
    = kvs:keyval ++ "\n" {
        let mut rv = HashMap::new();
        for &(k, v) in kvs.iter() {
           rv.insert(k, v);
        };
        rv
    }

keyval -> (i64, i64)
    = k:number ":" + v:number { (k, v) }

#[export]
expect_nothing -> ()
	= [a-zA-Z]

#[export]
position -> (usize, usize, usize)
 = start:#position [a]* middle:#position [b]* end:#position { (start, middle, end) }
